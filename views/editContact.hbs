<div class="form-group">
  <form class="editContact" action="/contacts/{{contact._id}}" method="post">
    <div class="col-md-4 col-md-offset-4 col-sm-4 col-sm-offset-4 col-xs-4 col-xs-offset-4 inputGroupContainer">
      <div class="input-group">
        <input type="text" name="name"  class="form-control" value={{contact.name}}>
      </div>
      <div class="input-group">
        <input type="number" name="phoneNumber" class="form-control" value={{contact.phone}}>
      </div>
      <button type="submit" class="btn btn-success" name="updateContact">Update Contact</button><br>

    </div>
  </form>
  <form class="deleteContact" action="/contacts/delete/{{contact._id}}" method="post">
    <button type="submit"class="btn btn-danger" name="deleteContact">Delete Contact</button>
  </form>
</div>
